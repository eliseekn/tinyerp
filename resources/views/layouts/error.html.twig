{% apply spaceless %}
<!DOCTYPE html>
<html lang="{{ config('app.lang') }}">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="robots" content="noindex, nofollow">
		<meta name="description" content="{% block error_description %}{% endblock %}">
        <link rel="stylesheet" href="{{ resources('vendor/bootstrap-4.5.3-dist/css/bootstrap.min.css') }}">
		<title>{% block error_title %}{% endblock %}</title>
	</head>

	<body>
		<div class="container mt-5 p-5 text-center">
			<h1 class="font-weight-bold display-4">{{ block("error_title") }}</h1>

			<p class="lead mt-4" style="line-height: 1.8"> 
                {% block error_message %}{% endblock %}
			</p>

            <p><a href="{{ url('/') }}">Go back home</a></p>
		</div>
	</body>
</html>
{% endapply %}