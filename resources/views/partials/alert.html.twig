{% if alert.display == 'popup' %}
    <alert-popup type="{{ alert.type }}" message="{{ alert.message }}"></alert-popup>
{% elseif alert.display == 'toast' %}
    <alert-toast type="{{ alert.type }}" message="{{ alert.message }}"></alert-toast>
{% else %}

    <div class="alert alert-{{ alert.type }} alert-dismissible show" role="alert">
        {{ alert.message|raw }}

        {% if alert.dismiss %}
        <button class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {% endif %}
    </div>

{% endif %}
